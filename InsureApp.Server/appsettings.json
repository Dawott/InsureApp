{
  "ConnectionStrings": {
    "InsureApp": "Server=(localdb)\\mssqllocaldb;Database=InsureApp;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "FileStorage": {
      "UploadPath": "C:\\Program Files\\InsureApp"
    },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "InsureApp",
        "Args": {"serverUrl": "http://localhost:7038"}
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
